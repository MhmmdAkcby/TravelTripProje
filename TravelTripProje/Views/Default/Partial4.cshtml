@using TravelTripProje.Models.Siniflar
@model List<Blog>
<div class="box1-left">
    @foreach (var x in Model)
    {
        <div class="bot-img">
            <img src="@x.BlogImage" alt="" style="width:120px;height:65px"/>
        </div>
        <div class="bot-desc1">
            <p>@x.Aciklama.Substring(0, 80)...<u><a href="/Blog/BlogDetay/@x.ID" style="color:blue;">devamını oku</a></u></p>
        </div>
        <div class="clear"></div>
    }
</div>
<br />