@model TravelTripProje.Models.Siniflar.BlogYorum
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}


<!DOCTYPE HTML>
<html>
<head>
    <title>Personal Blog a Blogging Category Flat Bootstarp  Responsive Website Template | Home :: w3layouts</title>
    <link href="~/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/web2/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!----webfonts---->
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <!--end slider -->
    <!--script-->
    <script type="text/javascript" src="~/web2/js/move-top.js"></script>
    <script type="text/javascript" src="~/web2/js/easing.js"></script>
    <!--/script-->
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 900);
            });
        });
    </script>
    <!---->
</head>
<body>
    <!---header---->
    <div class="header">
        <div class="container">

            <!---start-top-nav---->
            <div class="clearfix"></div>

        </div>
    </div>
    <!--/header-->
    <div class="content">
        <div class="container">
            <div class="content-grids">
                <div class="col-md-8 content-main">
                    <div class="content-grid">
                        @foreach (var x in Model.Deger1)
                        {
                            <div class="content-grid-info">
                                <img src="@x.BlogImage" alt="" style="margin-bottom:20px;" />
                                <div class="post-info" style="background-color: rgba(0, 0, 0, .075);">
                                    <a href="/Blog/BlogDetay/@x.ID"><h3>@x.Baslik</h3></a>
                                    <p>
                                        @x.Aciklama.Substring(0, 200)...
                                    </p>
                                    <a href="/Blog/BlogDetay/@x.ID"><span></span>Daha Fazla Oku</a>
                                </div>
                                <br /> <br />
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-4 side-content">
                    <div class="recent">
                        <h3>Son Bloglar</h3>
                        @foreach (var x in Model.Deger3)
                        {
                            <ul>
                                <li><a href="/Blog/BlogDetay/@x.ID">@x.Baslik</a></li>
                            </ul>
                        }
                    </div>
                    <div class="comments">
                        <h3>Son Yorumlar</h3>
                        <ul>
                            <li><a href="#">Amada Doe </a> on <a href="#">Hello World!</a></li>
                            <li><a href="#">Peter Doe </a> on <a href="#"> Photography</a></li>
                            <li><a href="#">Steve Roberts  </a> on <a href="#">HTML5/CSS3</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
